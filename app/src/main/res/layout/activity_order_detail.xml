<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".OrderDetailActivity">

    <TextView
        android:id="@+id/text_order"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#47258F"
        android:gravity="center"
        android:text="Thanh toán"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />




    <ImageView
        android:id="@+id/ic_back"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/text_order"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.625"
        app:srcCompat="@drawable/ic_back" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/bottom_nav_menu" />

    <View
        android:id="@+id/view"
        android:layout_width="412dp"
        android:layout_height="137dp"
        android:background="#B9A7E0"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_order" />

    <TextView
        android:id="@+id/card"
        android:layout_width="256dp"
        android:layout_height="160dp"
        android:layout_marginTop="92dp"
        android:background="@drawable/rounded_rectangle"
        android:padding="16dp"
        android:textColor="#000000"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_order" />
    <ImageView
        android:id="@+id/ic_edit"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/card"
        app:layout_constraintTop_toTopOf="@+id/card"
        app:srcCompat="@drawable/edit" />

    <TextView
        android:id="@+id/saved_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="20dp"
        android:text="Nguyễn Quốc Đạt"
        app:layout_constraintStart_toStartOf="@+id/card"
        app:layout_constraintTop_toTopOf="@+id/card" />

    <TextView
        android:id="@+id/address"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="64dp"
        android:text="Thư Phú, Thường Tín, Hà Nội"
        app:layout_constraintStart_toStartOf="@+id/card"
        app:layout_constraintTop_toTopOf="@+id/card" />
    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="95dp"
        android:text="0965512901"
        app:layout_constraintStart_toStartOf="@+id/card"
        app:layout_constraintTop_toTopOf="@+id/card" />

    <ImageView
        android:id="@+id/step1"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="76dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="10dp"
        android:src="@drawable/ic_tick"
        android:gravity="center"
        android:background="@drawable/circle_solid"
        app:layout_constraintBottom_toTopOf="@+id/card"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />
    <TextView
        android:id="@+id/step2"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle_solid"
        android:gravity="center"
        android:text="2"
        android:textColor="#FFFFFF"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/step3"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="64dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/circle_empty"
        android:gravity="center"
        android:text="3"
        android:textColor="#000000"
        android:textSize="15dp"
        app:layout_constraintBottom_toTopOf="@+id/card"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.792"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/dahsed1"
        android:layout_width="83dp"
        android:layout_height="6dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toStartOf="@+id/step2"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/step1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dashed" />

    <ImageView
        android:id="@+id/dahsed2"
        android:layout_width="83dp"
        android:layout_height="6dp"
        android:layout_marginTop="76dp"
        app:layout_constraintEnd_toStartOf="@+id/step3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/step2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/dashed" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Địa chỉ"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.183"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_orderdetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Chi tiết hóa đơn"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/text_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="104dp"
        android:text="Thanh toán"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.844"
        app:layout_constraintStart_toStartOf="@+id/view"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/order_detail"
        android:layout_width="253dp"
        android:layout_height="240dp"
        android:layout_marginTop="119dp"
        android:background="@drawable/rounded_rectangle"
        android:padding="16dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toTopOf="@+id/view2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:layout_constraintVertical_bias="0.087" />

    <ImageView
        android:id="@+id/ic_tick"
        android:layout_width="26dp"
        android:layout_height="26dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        app:layout_constraintStart_toStartOf="@+id/order_detail"
        app:layout_constraintTop_toTopOf="@+id/order_detail"
        app:srcCompat="@drawable/tick" />

    <ImageView
        android:id="@+id/product"
        android:layout_width="108dp"
        android:layout_height="100dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="44dp"
        app:layout_constraintStart_toStartOf="@+id/order_detail"
        app:layout_constraintTop_toTopOf="@+id/order_detail"
        app:srcCompat="@drawable/giay_the_thao_nam_thoang_khi_naik_pllo_19_500x500" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="105dp"
        android:layout_height="0dp"
        android:layout_marginStart="124dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="27dp"
        android:text="Giày thể thao nam thoáng khí NAIK PLLO"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/order_detail"
        app:layout_constraintHorizontal_bias="0.25"
        app:layout_constraintStart_toStartOf="@+id/order_detail"
        app:layout_constraintTop_toTopOf="@+id/order_detail" />

    <TextView
        android:id="@+id/product_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginTop="96dp"
        android:layout_marginEnd="75dp"
        android:text="Mã sản phẩm: 1"
        app:layout_constraintEnd_toEndOf="@+id/order_detail"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/order_detail"
        app:layout_constraintTop_toTopOf="@+id/order_detail" />

    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="123dp"
        android:layout_marginTop="120dp"
        android:text="Giá: 680.000đ"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="@+id/order_detail"
        app:layout_constraintTop_toTopOf="@+id/order_detail" />


    <TextView
        android:id="@+id/integer_number"
        android:layout_width="36dp"
        android:layout_height="35dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="160dp"
        android:gravity="center"
        android:text="1"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/order_detail"
        app:layout_constraintTop_toTopOf="@+id/order_detail" />




    <ImageView
        android:id="@+id/decrease"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="176dp"
        android:clickable="true"
        android:onClick="decreaseInteger"
        app:layout_constraintStart_toStartOf="@+id/order_detail"
        app:layout_constraintTop_toTopOf="@+id/order_detail"
        app:srcCompat="@drawable/minus" />

    <ImageView
        android:id="@+id/increase"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginStart="84dp"
        android:layout_marginTop="176dp"
        android:clickable="true"
        android:onClick="increaseInteger"
        app:layout_constraintStart_toStartOf="@+id/order_detail"
        app:layout_constraintTop_toTopOf="@+id/order_detail"
        app:srcCompat="@drawable/plus" />

    <Button
        android:id="@+id/button_delete"
        android:layout_width="77dp"
        android:layout_height="38dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="55dp"
        android:gravity="center"
        android:text="Xóa"
        app:layout_constraintEnd_toEndOf="@+id/order_detail"
        app:layout_constraintHorizontal_bias="0.193"
        app:layout_constraintStart_toStartOf="@+id/order_detail"
        app:layout_constraintTop_toTopOf="@+id/order_detail" />

    <View
        android:id="@+id/view2"
        android:layout_width="410dp"
        android:layout_height="87dp"
        android:background="@drawable/box_with_border"
        app:layout_constraintBottom_toTopOf="@+id/bottomNavigationView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/button_continue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/button_custom"
        android:text="Tiếp tục"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.749"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/total"
        android:layout_width="117dp"
        android:layout_height="19dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="16dp"
        android:text="Tổng thanh toán:"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <TextView
        android:id="@+id/total_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="88dp"
        android:layout_marginTop="32dp"
        android:text="680.000đ"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/view2"
        app:layout_constraintTop_toTopOf="@+id/view2" />

    <ImageView
        android:id="@+id/ic_left_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="232dp"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:srcCompat="@drawable/left_arrow" />

    <ImageView
        android:id="@+id/ic_right_arrow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="232dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view"
        app:srcCompat="@drawable/right_arrow" />

</androidx.constraintlayout.widget.ConstraintLayout>